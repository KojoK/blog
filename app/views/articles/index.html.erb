<p id="notice"><%= notice %></p>
<div id="articles">
  <h1>Articles</h1>
    <% @articles.each do |article| %>
      <h1><%= link_to article.title, article %></h1>
      <div>
        <%= image_tag article.image, class: "index-img" %>
      </div>
      <h4><%= truncate(article.content, length: 60) %></h4>
    <% end %>
</div>

<%= link_to 'New Article', new_article_path %>
