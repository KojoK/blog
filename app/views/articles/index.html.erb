<p id="notice"><%= notice %></p>
  <h1>Articles</h1>
    <% @articles.each do |article| %>
    <div class="news-flash">
      <h1 class="index-title"><%= link_to article.title, article %></h1>
      <div>
        <%= image_tag article.image, class: "index-img" %>
      </div>
      <h4><%= truncate(article.content, length: 60) %></h4>
    </div>
    <% end %>

<%= link_to 'New Article', new_article_path %>
